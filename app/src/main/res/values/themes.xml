<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.RecipeAppMVP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
    <item name="colorOnPrimary">@color/colorPrimaryText</item>
    <item name="colorOnBackground">@color/colorPrimaryText</item>
    <item name="colorOnSurface">@color/colorSurface</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/colorAccent</item>
    <item name="colorSecondaryVariant">@color/colorPrimaryLight</item>
    <item name="colorOnSecondary">@color/colorWhiteDark</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.RecipeAppMVP.Fullscreen" parent="Theme.RecipeAppMVP">
    <item name="android:actionBarStyle">@style/Widget.Theme.RecipeAppMVP.ActionBar.Fullscreen</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:windowBackground">@null</item>
  </style>
</resources>